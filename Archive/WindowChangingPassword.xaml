<Window x:Class="Archive.WindowChangingPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PP"
        mc:Ignorable="d"
        Title="Смена пароля" Height="220" Width="450" FontSize="26" ResizeMode="NoResize" Icon="Resources\Архив.ico">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="UserInfoTextBlock"
                       Margin="5"/>
            <TextBox x:Name="NewPasswordTextBox"
                     Margin="5"
                     materialDesign:HintAssist.Hint="Новый пароль"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     materialDesign:TransitionAssist.DisableTransitions="True"/>
            <Button x:Name="btnSave"
                    Content="Сохранить"
                    Margin="5"
                    Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
